{
  "root": true,
  "extends": [
    "airbnb",
    "prettier"
  ],
  "plugins": [
    "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ]
      }
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "jest": true
  },
  "rules": {
    "import/first": 1,
    "import/extensions": 0,
    "no-console": 2,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "func-names": 0,
    "no-shadow": 1,
    "prefer-promise-reject-errors": 1,
    "import/no-webpack-loader-syntax": 1,
    "react/forbid-prop-types": 1,
    "no-nested-ternary": 1,
    "react/no-array-index-key": 1,
    "no-param-reassign": 1,
    "no-restricted-syntax": 1,
    "react/prefer-stateless-function": 1,
    "import/no-named-default": 1,
    "guard-for-in": 1,
    "jsx-a11y/click-events-have-key-events": 1,
    "jsx-a11y/no-static-element-interactions": 1,
    "spaced-comment": 1,
    "react/prop-types": 1,
    "react/require-default-props": 0,
    "react/jsx-curly-brace-presence": 1,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "jsx-a11y/anchor-is-valid": [
      1,
      {
        "components": [
          "Link"
        ],
        "specialLink": [
          "to",
          "hrefLeft",
          "hrefRight"
        ],
        "aspects": [
          "noHref",
          "invalidHref",
          "preferButton"
        ]
      }
    ]
  },
  "globals": {
    "$Keys": true,
    "$Values": true,
    "npm_package_version": true,
    "Generator": true,
    "API_URL": true,
    "__DEV__": true,
    "beforeAll": true,
    "test": true,
    "expect": true,
    "describe": true,
    "it": true,
    "moment$Moment": true,
    "$Enum": true,
    "ReactClass": true,
    "React$Element": true,
    "React$Component": true,
    "__dirname": true,
    "process": true
  }
}